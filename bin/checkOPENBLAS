#!/bin/bash
die(){
    test "$*" && echo "$*" || true
    exit 1
}

if [ $# -eq 0 ]; then
    _OPENBLAS=/usr
else
    _OPENBLAS=$1
fi

if [ ! -e ${_OPENBLAS}/include/openblas_config.h ]; then
   die "[ERROR] openblas_config.h not found, check your HAVE_OPENBLAS value ${_OPENBLAS}"
fi
echo ${_OPENBLAS}
