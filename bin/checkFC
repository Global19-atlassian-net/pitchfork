#!/usr/bin/env bash

reportVersion(){
    set -euf -o pipefail
    $1 -dumpversion 2>&1
}

die(){
    test "$*" && echo "$*" || true
    exit 1
}

FC=`echo $* | awk '{print $1}'`

which $FC || die "[ERROR] $FC is not on your PATH env variable"

# currently only check for the existence of a fortran compiler
case $FC in
gfortran* | */gfortran*)
  myVersion=`reportVersion $FC`
  exit 0
  ;;
g95* | */g95*)
  myVersion=`reportVersion $FC|sed -n -e 's/.*(//;s/).*//;s/!//;s/g95//;s/ //g;1p'`
  exit 0
  ;;
ifort* | */ifort*)
  myVersion=`reportVersion $FC`
  exit 0
*)
  echo "[WARNING] unrecognized FC, please send us info if you think this FC is valid"
  exit 0
  ;;
esac
